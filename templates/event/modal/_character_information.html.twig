<div class="modal fade" id="detailsCharacter_{{ raidCharacter.userCharacter.id }}" tabindex="-1" aria-labelledby="Character details" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Additional informations : {{ raidCharacter.userCharacter.name }}</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                I also accept to play 
                {% for role in raidCharacter.userCharacter.roles %}
                    <img src="{{ role.imageSource }}" 
                    width="40" height="40" alt="{{ role.name }}">
                {% endfor %}

                <br>

                {% if raidCharacter.userCharacter.information is empty %}
                    This user didn't provide any additional information about his character.
                {% else %}
                    {{ raidCharacter.userCharacter.information|raw }}
                {% endif %}
            </div>
        </div>
    </div>
</div>
