
<div class="row d-flex justify-content-around">
    <div class="col-12 col-md-11 p-md-4 p-xs-1 border border-primary rounded col-margins">

        {% if inProgressRaids %}
            <h3 class="h4 ml-4">Raid currently happening</h3>
            <table class="table table-striped table-bordered table-hover table-dark">
                <thead class="text-center">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Faction</th>
                        <th scope="col">Server</th>
                        <th scope="col">Date</th>
                        <th scope="col" class="d-none d-md-table-cell">RL as</th>
                        <th scope="col" class="d-none d-md-table-cell">Role</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>

                <tbody class="text-center">

                    {% for raid in inProgressRaids %}
                        <tr>
                            {% set raidCharacter = get_raid_character_from_user(raid) %}
                            <td>{{ raid.name }}</td>
                            <td>{{ raidCharacter.userCharacter.faction.name }}</td>
                            <td>{{ raidCharacter.userCharacter.server.name }}</td>
                            <td>{{ raid.startAt|date("d/m/Y") }} from {{ raid.startAt|date("H:i") }} to {{ raid.endAt|date("H:i") }}</td>
                            <td class="text-success d-none d-md-table-cell">{{ raidCharacter.userCharacter.name }}</td>
                            <td class="d-none d-md-table-cell">{{ raidCharacter.role.name }}</td>
                            <td>
                                <button type="button" class="btn btn-primary rounded-pill" data-toggle="modal" data-target="#detailsRaid_{{ raid.id }}">Show Breakdown</button>
                                <a class="btn btn-primary rounded-pill" href="{{ path('user_raid_show', {id: raid.id }) }}">Show</a>
                                {{ include('user/modal/_scheduled_raid_show_breakdown.html.twig') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}

        {% if pendingRaids %}

            <h3 class="h4 ml-4">Forthcoming raids</h3>

            <table class="table table-striped table-bordered table-hover table-dark">
                <thead class="text-center">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Faction</th>
                        <th scope="col">Server</th>
                        <th scope="col">Date</th>
                        <th scope="col" class="d-none d-md-table-cell">RL as</th>
                        <th scope="col" class="d-none d-md-table-cell">Role</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>

                <tbody class="text-center">

                    {% for raid in pendingRaids %}
                        <tr>
                            {% set raidCharacter = get_raid_character_from_user(raid) %}
                            <td>{{ raid.name }}</td>
                            <td>{{ raidCharacter.userCharacter.faction.name }}</td>
                            <td>{{ raidCharacter.userCharacter.server.name }}</td>
                            <td>{{ raid.startAt|date("d/m/Y") }} from {{ raid.startAt|date("H:i") }} to {{ raid.endAt|date("H:i") }}</td>
                            <td class="text-success d-none d-md-table-cell">{{ raidCharacter.userCharacter.name }}</td>
                            <td class="d-none d-md-table-cell">{{ raidCharacter.role.name }}</td>
                            <td>
                                
                                <button type="button" class="btn btn-primary rounded-pill" data-toggle="modal" data-target="#detailsRaid_{{ raid.id }}">Show breakdown</button>
                                <a class="btn btn-primary rounded-pill" href="{{ path('user_raid_show', {id: raid.id }) }}">Show</a>
                                {{ include('user/modal/_scheduled_raid_show_breakdown.html.twig') }}

                                {% if is_granted('ROLE_RAID_LEADER') and user == raid.user %}
                                    <a class="btn btn-primary rounded-pill" href="{{ path('raidleader_raid_edit', {id: raid.id})}}">Manage</a>
                                    <a class="btn btn-primary rounded-pill" href="{{ path('raidleader_raid_archived', {id: raid.id})}}">Delete</a>
                                {% elseif is_granted('ROLE_USER') %}
                                    <a class="btn btn-primary rounded-pill" href="{{ path('user_raid_unregister', {id: raid.id})}}">Unregister</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        {% else %}

            <div class="row p-2 p-md-4 pl-md-5 pr-md-5 mt-2 mb-5 ml-md-5 mr-md-5 border border-info rounded text-center">
                <p>
                    It seems that you did not subscribe to any of the forthcoming raids yet. Create characters in your Account page and
                    look for raids in the Calendar page.
                </p>
            </div>

        {% endif %}

        <div class="d-flex justify-content-center">
            <a class="btn btn-primary rounded-pill btn-lg" href="{{ path('raidleader_raid_past')}}">Show past raids</a>
        </div>
    </div>
</div>
