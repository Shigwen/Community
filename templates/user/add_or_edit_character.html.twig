{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
	{{ form_start(form, {'attr': {'class': 'calendar', 'id': 'test-id'}}) }}
		{{ form_label(form.name) }}
		{{ form_widget(form.name) }}

		<div> {{ form_row(form.characterClass) }}</div>
		<div> {{ form_row(form.server) }}</div>
		<div> {{ form_row(form.information) }}</div>
		<div> {{ form_row(form.roles) }}</div>

		<button type="submit">Valider</button>
	{{ form_end(form) }}
</div>
{% endblock %}
