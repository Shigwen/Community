<div class="modal fade" id="clickMeCharacter_{{ character.id }}" tabindex="-1" aria-labelledby="Raid details" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Informations</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {% if character.information is empty %}
                    You didn't provide any additional information about your character.
                {% else %}
                    {{ character.information|raw }}
                {% endif %}
            </div>
        </div>
    </div>
</div>
