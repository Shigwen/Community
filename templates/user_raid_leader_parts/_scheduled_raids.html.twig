
<div class="row d-flex justify-content-around">
    <div class="col-12 col-md-11 p-md-4 p-xs-1 border border-primary rounded col-margins">

        {% if inProgressRaids %}
            <h2 class="text-center h3">Raid currently happening</h2>
            <table class="table table-striped table-bordered table-hover table-dark">
                <thead class="text-center">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Faction</th>
                        <th scope="col">Server</th>
                        <th scope="col">Date</th>
                        <th scope="col" class="d-none d-md-table-cell">RL as</th>
                        <th scope="col" class="d-none d-md-table-cell">Role</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>

                <tbody class="text-center">

                    {% for raid in inProgressRaids %}
                        <tr>
                            {% set raidCharacter = get_raid_character_from_raidleader(raid) %}
                            <td>{{ raid.name }}</td>
                            <td>{{ raidCharacter.userCharacter.faction.name }}</td>
                            <td>{{ raidCharacter.userCharacter.server.name }}</td>
                            <td>{{ raid.startAt|date("d/m/Y") }} from {{ raid.startAt|date("H:i", user.timezone.name) }} to {{ raid.endAt|date("H:i", user.timezone.name) }}</td>
                            <td class="text-success d-none d-md-table-cell">{{ raidCharacter.userCharacter.name }}</td>
                            <td class="d-none d-md-table-cell">{{ raidCharacter.role.name }}</td>
                            <td>
                                <button type="button" class="btn btn-primary rounded-pill" data-toggle="modal" data-target="#detailsRaid_{{ raid.id }}">Show Breakdown</button>
                                <a class="btn btn-primary rounded-pill" href="{{ path('event', {id: raid.id }) }}">Show</a>
                                {{ include('user_raid_leader_parts/modal/_scheduled_raid_show_breakdown.html.twig') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}

        {% if pendingRaids %}
            <h2 class="text-center h3">Forthcoming raids</h2>

            <table class="table table-striped table-bordered table-hover table-dark">
                <thead class="text-center">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Faction</th>
                        <th scope="col">Server</th>
                        <th scope="col">Date</th>
                        <th scope="col" class="d-none d-md-table-cell">RL as</th>
                        <th scope="col" class="d-none d-md-table-cell">Role</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>

                <tbody class="text-center">

                    {% for raid in pendingRaids %}
                        <tr>
                            {% set raidCharacter = get_raid_character_from_raidleader(raid) %}
                            <td>{{ raid.name }}</td>
                            <td>{{ raidCharacter.userCharacter.faction.name }}</td>
                            <td>{{ raidCharacter.userCharacter.server.name }}</td>
                            <td>{{ raid.startAt|date("d/m/Y") }} from {{ raid.startAt|date("H:i", user.timezone.name) }} to {{ raid.endAt|date("H:i", user.timezone.name) }}</td>
                            <td class="text-success d-none d-md-table-cell">{{ raidCharacter.userCharacter.name }}</td>
                            <td class="d-none d-md-table-cell">{{ raidCharacter.role.name }}</td>
                            <td>

                                <button type="button" class="btn btn-primary rounded-pill" data-toggle="modal" data-target="#detailsRaid_{{ raid.id }}">Show breakdown</button>
                                <a class="btn btn-primary rounded-pill" href="{{ path('event', {id: raid.id }) }}">Show</a>
                                {{ include('user_raid_leader_parts/modal/_scheduled_raid_show_breakdown.html.twig') }}

                                {% if is_granted('ROLE_RAID_LEADER') and user == raid.user %}
                                    <a class="btn btn-primary rounded-pill" href="{{ path('raidleader_raid_edit', {id: raid.id})}}">Manage</a>
                                    <a class="btn btn-primary rounded-pill" href="{{ path('raidleader_raid_archived', {id: raid.id})}}">Delete</a>
                                {% elseif is_granted('ROLE_USER') %}
                                    <a class="btn btn-primary rounded-pill" href="{{ path('unregister', {id: raid.id})}}">Unregister</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        {% else %}
            {% if app.request.attributes.get('_route') == 'user_account' %}
                <h2 class="text-center h3">Forthcoming raids</h2>
            {% else %}
                <h2 class="text-center h3">Forthcoming raids</h2>
            {% endif %}

            <div class="row p-2 p-md-4 pl-md-5 pr-md-5 mt-2 mb-5 ml-md-5 mr-md-5">
                <p class="m-auto text-center">
                    {% if app.request.attributes.get('_route') == 'user_account' %}
                        It seems that you did not subscribe to any of the forthcoming raids yet.
                        Create characters on this page and look for raids in the Calendar page.
                    {% else %}
                        Il semblerais que n'ayez pas encore créé de raid.
                    {% endif %}
                </p>
            </div>

        {% endif %}

        <div class="d-flex justify-content-center">
            {% if is_granted('ROLE_RAID_LEADER') %}
                <a class="btn btn-primary rounded-pill btn-lg" href="{{ path('raidleader_raid_past')}}">Show past raids</a>
            {% elseif is_granted('ROLE_USER') %}
                <a class="btn btn-primary rounded-pill btn-lg" href="{{ path('user_raid_past')}}">Show past raids</a>
            {% endif %}
        </div>
    </div>
</div>
