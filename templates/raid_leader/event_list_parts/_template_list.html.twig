
<div class="row d-flex justify-content-around">
    <div class="col-12 col-md-11 p-md-4 p-xs-1 border border-primary rounded col-margins">

        <h2 class="text-center h3">Raid Template List (max. 5)</h2>

        {% if raidTemplates is empty %}
            <div class="row p-2 p-md-4 pl-md-5 pr-md-5 mt-2 mb-5 ml-md-5 mr-md-5">
                <p class="m-auto text-center">
                    It seems that you didn't create any template yet <br>
                    Do it on this page in order to fasten the creation of your next raids
                </p>
            </div>
        {% else %}
            <table class="table table-striped table-bordered table-hover table-dark">
                <thead class="text-center">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Faction</th>
                        <th scope="col">Server</th>
                        <th scope="col">Day</th>
                        <th scope="col" class="d-none d-md-table-cell">RL as</th>
                        <th scope="col" class="d-none d-md-table-cell">Role</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>

                <tbody class="text-center ">
                    {% for template in raidTemplates %}
                    <tr>
                        {% set raidCharacter = get_raid_character_from_raidleader(template) %}
                        <td>{{ template.templateName }}</td>
                        <td>{{ raidCharacter.userCharacter.faction.name }}</td>
                        <td>{{ raidCharacter.userCharacter.server.name }}</td>
                        <td>{{ template.verboseStartDayOfWeek }} from {{ template.startAt|date("H:i", user.timezone.name) }} to {{ template.endAt|date("H:i", user.timezone.name) }}</td>
                        <td class="text-success d-none d-md-table-cell">{{ raidCharacter.userCharacter.name }}</td>
                        <td class="d-none d-md-table-cell">{{ raidCharacter.role.name }}</td>
                        <td>
                            <button type="button" class="btn btn-primary rounded-pill" data-toggle="modal" data-target="#clickMeTemplate_{{ template.id }}">Show breakdown</button>
                            <a class="btn btn-primary rounded-pill" href="{{ path('raidleader_events')}}?id={{template.id}}">Use/edit</a>
                            <a class="btn btn-primary rounded-pill" href="{{ path('raidleader_template_delete', {id: template.id})}}">Delete</a>
                            {{ include('raid_leader/modal/_template_show_breakdown.html.twig') }}
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        {% endif %}
    </div>
</div>
