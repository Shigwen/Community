
<div class="row mb-4 mx-0">
    <div class="col-lg-6 col-md-11 text-center">
        {% if tanks|length > 0 %}
            <div class="col-md-11 text-center p-0">
                {% set role = tanks %}
                {% set roleName = 'tanks' %}
                {{ include('event/show_event_parts/_raid_roster_table.html.twig') }}
            </div>
        {% endif %}

        {% if healers|length > 0 %}
            <div class="col-md-11 text-center p-0">
                {% set role = healers %}
                {% set roleName = 'healers' %}
                {{ include('event/show_event_parts/_raid_roster_table.html.twig') }}
            </div>
        {% endif %}
    </div>

    <div class="col-lg-6 col-md-11 text-center">
        {% set role = dps %}
        {% set roleName = 'DPS' %}
        {{ include('event/show_event_parts/_raid_roster_table.html.twig') }}
    </div>
</div>