<div class="modal fade" id="clickMeTemplate_{{ template.id }}" tabindex="-1" aria-labelledby="Raid details" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Informations</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex d-md-none mb-3">
                    <p class="col-12 text-center h5">
                        You play : {{ raidCharacter.userCharacter.name }}
                        with role : {{ raidCharacter.role.name }}
                    </p>
                </div>

                <table class="table table-striped table-bordered table-hover table-dark">
                    <thead class="text-center">
                        <tr>
                            <th scope="col">Raid type</th>
                            <th scope="col">You're looking for</th>
                            <th scope="col">Min. and Max. Tanks</th>
                            <th scope="col">Min. and Max. Healers</th>
                        </tr>
                    </thead>

                    <tbody class="text-center ">
                        <tr>
                            <td>{{ template.raidType }}</td>
                            <td>{{ template.expectedAttendee }}</td>
                            <td> 
                                {% if template.minTank == template.maxTank %} 
                                    {{ template.minTank }}
                                {% else %} 
                                    {{ template.minTank }} to {{ template.maxTank }}
                                {% endif %} 
                            </td>
                            <td>
                                {% if template.minHeal == template.maxHeal %} 
                                    {{ template.minHeal }}
                                {% else %} 
                                    {{ template.minHeal }} to {{ template.maxHeal }}
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
            <div class="modal-footer ">
                <button type="button" class="btn btn-lg btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>