{% extends 'base.html.twig' %}

{% block title %}Hello MessageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Type de message</th>
                <th>Message</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for message in messages %}
                <tr>
                    <td>{{ message.name }}</td>
                    <td>{{ message.email }}</td>
                    <td>{{ message.messageType.name }}</td>
                    <td>{{ message.message|slice(0, 150) }} {% if message.message|length > 150 %}...{% endif %}</td>
                    <td>
                        <a href="{{ path('admin_message', {id: message.id}) }}">Show</a>
                        <a href="{{ path('admin_archive_message', {id: message.id}) }}">Archived</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_archived_messages') }}">Archived messages</a>
</div>
{% endblock %}
